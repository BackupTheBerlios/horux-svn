    />

<com:TTemplateColumn
    HeaderText=""
    HeaderStyle.Width = "20px"
    >
    <prop:HeaderTemplate>
        <com:TActiveCheckBox
            ID="headerCB"
            AutoPostBack="true"
            OnCallback="Page.checkboxAllCallback"
            InputAttributes.value="0"
            />
    </prop:HeaderTemplate>
    <prop:ItemTemplate>
        <com:TActiveCheckBox
            ID="item"
            InputAttributes.value="<%#$this->NamingContainer->DataItem['id']%>"
            />
    </prop:ItemTemplate>
</com:TTemplateColumn>

<com:TBoundColumn
    HeaderText="<%[Identificator]%>"
    DataField="identificator"
    />

