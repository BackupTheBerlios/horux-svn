<com:TContent ID="Main">
<div id="content-box">
    <div class="border">
        <div class="padding">
            <div id="toolbar-box">
                
                <div class="t">
                    <div class="t">
                        <div class="t"></div>
                    </div>
                </div>
                <div class="m" >
                    <div class="toolbar" id="toolbar">
                        <table class="toolbar">
                            <tr>
                                <td class="button" id="toolbar-new">
                                    <a href="<%= $this->Service->constructUrl('nonWorkingDay.add') %>" class="toolbar">
                                        <span class="icon-32-new" title="<%[New]%>"></span><%[New]%>
                                    </a>
                                </td>

                                <td class="button" id="toolbar-print">
                                  <a href="<%= $this->Service->constructUrl($this->getApplication()->getService()->getRequestedPagePath()) %>&action=print" class="toolbar" target="_blank">
                                    <span class="icon-32-print" title="<%[Print]%>"></span><%[Print]%>
                                  </a>
                                </td>
								
                                                            
                                <td class="button" id="toolbar-help">
                                    <a href="./proxy/index.php?page=<%= $this->getApplication()->getService()->getRequestedPagePath() %>&lang=<%= $this->getApplication()->getGlobalState('lang') %>" title="<%[Help]%>" onClick="Modalbox.show(this.href, {title: this.title, width: 600, height: 600}); return false;" class="toolbar" >
                                        <span class="icon-32-help" title="<%[Help]%>"></span><%[Help]%>
                                    </a>
                                </td>


                            </tr>
                        </table>
                    </div><!-- end class toolbar -->

                    <div class="header icon-48-noneworkingday"><%[Non Working Day]%></div>
                    <div class="clr"></div>
                </div><!-- end class m -->


                <div class="b">
                    <div class="b">
                        <div class="b"></div>
                    </div>
                </div>
            </div><!-- end class toolbar-box -->

            <com:TLiteral ID="okMsg" Text="" />
            <com:TLiteral ID="koMsg" Text="" />

            <div id="element-box">
    
                <div class="t">
                    <div class="t">
                        <div class="t"></div>
                    </div>
                </div>
                <div class="m">

					<center>
						<com:TLabel Text="<%[Year]%>"/>
						<com:TDropDownList ID="year" 
						AutoPostBack="true"
    					OnSelectedIndexChanged="selectionChanged">
							<com:TListItem Selected="true" Value="<%= date('Y') %>" Text="<%= date('Y') %>" />
							<com:TListItem Value="<%= date('Y')+1 %>" Text="<%= date('Y')+1 %>" />
							<com:TListItem Value="<%= date('Y')+2 %>" Text="<%= date('Y')+2 %>" />
							<com:TListItem Value="<%= date('Y')+3 %>" Text="<%= date('Y')+3 %>" />
							<com:TListItem Value="<%= date('Y')+4 %>" Text="<%= date('Y')+4 %>" />
						</com:TDropDownList>
					</center>
					<br/>
					<table border="0" width="100%">
					<tr>
						<td><%% $this->displayCalendar(1,Prado::localize('January')); %></td>
						<td><%% $this->displayCalendar(2,Prado::localize('February')); %></td>
						<td><%% $this->displayCalendar(3,Prado::localize('March')); %></td>
						<td><%% $this->displayCalendar(4,Prado::localize('April')); %></td>
						<td><%% $this->displayCalendar(5,Prado::localize('May')); %></td>
						<td><%% $this->displayCalendar(6,Prado::localize('June')); %></td>
				  	</tr>
					<tr>
						<td><%% $this->displayCalendar(7,Prado::localize('Jully')); %></td>
						<td><%% $this->displayCalendar(8,Prado::localize('August')); %></td>
						<td><%% $this->displayCalendar(9,Prado::localize('September')); %></td>
						<td><%% $this->displayCalendar(10,Prado::localize('October')); %></td>
						<td><%% $this->displayCalendar(11,Prado::localize('November')); %></td>
						<td><%% $this->displayCalendar(12,Prado::localize('December')); %></td>
				  	</tr>
				  	</table>
                  <div class="clr"></div>
                </div> <!-- end class m -->
                <div class="b">
                    <div class="b">
                        <div class="b"></div>
                    </div>
                </div>
            </div> <!-- end class element-box -->
            <div class="clr"></div>
        </div> <!-- end class toolbar-box -->
        <div class="clr"></div>
    </div><!-- end class content-box -->
</div> <!-- end class content-box -->
</com:TContent>
