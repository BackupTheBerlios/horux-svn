<com:TContent ID="Main">
<div id="content-box">
    <div class="border">
        <div class="padding">

            <com:TToolbarBox
                ID="tbb"
                Title="<%[User Group List]%>"
                CssIcon="icon-48-userGroup"
                EditVisible="true"
                AddVisible="true"
                AddUrl="userGroup.add"
                DelVisible="true"
                PrintVisible="true"
                PrintUrl="<%= $this->Service->constructUrl($this->getApplication()->getService()->getRequestedPagePath()) %>&action=print"
                HelpVisible="true"
            />

            <com:TLiteral ID="okMsg" Text="" />
            <com:TLiteral ID="koMsg" Text="" />

            <div id="element-box">
    
                <div class="t">
                    <div class="t">
                        <div class="t"></div>
                    </div>
                </div>
                <div class="m">

                    <com:TDataGrid
                    ID="DataGrid"
                    DataKeyField="id"
                    AutoGenerateColumns="false"
                    CssClass="adminlist"
                    ItemStyle.CssClass = "row0"
				    AlternatingItemStyle.CssClass="row1"
                    AllowPaging="true"
                    PageSize="15"
                    PagerStyle.Mode="Numeric"
                    PagerStyle.HorizontalAlign="Center"
                    OnPageIndexChanged="changePage"
                    OnPagerCreated="pagerCreated"
                    OnEditCommand="onEdit"
                    >

                    <com:TBoundColumn
                        HeaderText="ID"
                        DataField="id"
                        HeaderStyle.Width = "20px"
                    />

                    <com:TTemplateColumn
                        HeaderText=""
                        HeaderStyle.Width = "20px"
                    >
                        <prop:HeaderTemplate>
                            <com:TActiveCheckBox
                                ID="headerCB" 
                                AutoPostBack="true"
                                OnCallback="Page.checkboxAllCallback"
                                InputAttributes.value="0"
                            />
                        </prop:HeaderTemplate>
                        <prop:ItemTemplate>
							<com:TConditional Condition="!$this->Page->isRecordBlock('hr_user_group', $this->NamingContainer->DataItem['id'])">
								<prop:TrueTemplate>
		                            <com:TActiveCheckBox 
		                                ID="item"
		                                InputAttributes.value="<%#$this->NamingContainer->DataItem['id']%>"
		                            />
		    		            </prop:TrueTemplate>
								<prop:FalseTemplate>
									<span onmouseover="Tip('<%[This record is modified by <b>]%><%= $this->Page->getUserName($this->NamingContainer->DataItem['locked']) %></b> ', BALLOON, true, BALLOONIMGPATH, './js/tip_balloon', OFFSETX, -10, TEXTALIGN, 'justify', FADEIN, 600, FADEOUT, 600, PADDING, 8)">
										<com:TImage ID="noAccess" ImageUrl="./themes/letux/images/menu/icon-16-access.png" />
									</span>
		            		    </prop:FalseTemplate>
							</com:TConditional>
                        </prop:ItemTemplate>
                    </com:TTemplateColumn>

	                <com:TTemplateColumn
	                   HeaderText=""
	                >
                    <prop:HeaderTemplate>
                        <com:TLabel
                        	Text="<%[Name]%>"
                        />
                    </prop:HeaderTemplate>


                        <prop:ItemTemplate>
							<com:TConditional Condition="!$this->Page->isRecordBlock('hr_user_group', $this->NamingContainer->DataItem['id'])">
								<prop:TrueTemplate>
		                            <com:THyperLink 
		                                NavigateUrl="<%= $this->Service->constructUrl('userGroup.mod',array('id'=>$this->NamingContainer->DataItem['id'])) %>"
		                                Text="<%#$this->NamingContainer->DataItem['name']%>"
		                            />
		    		            </prop:TrueTemplate>
								<prop:FalseTemplate>
									<com:TLabel
			                        	Text="<%#$this->NamingContainer->DataItem['name']%>"
            			            />
		            		    </prop:FalseTemplate>
							</com:TConditional>
                        </prop:ItemTemplate>
	                </com:TTemplateColumn>

                    <com:TBoundColumn
                        HeaderText="<%[Access Plugin Name]%>"
                        DataField="accessPlugin"
						HeaderStyle.Width="200px"
                    />

                    <com:TBoundColumn
                        HeaderText="<%[Comment]%>"
                        DataField="comment"
                    />

                    </com:TDataGrid>
                    <div class="clr"></div>
                </div> <!-- end class m -->
                <div class="b">
                    <div class="b">
                        <div class="b"></div>
                    </div>
                </div>
            </div> <!-- end class element-box -->
            <div class="clr"></div>
        </div> <!-- end class toolbar-box -->
        <div class="clr"></div>
    </div><!-- end class content-box -->
</div> <!-- end class content-box -->
</com:TContent>
