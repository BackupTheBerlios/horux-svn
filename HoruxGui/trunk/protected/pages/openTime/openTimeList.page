<com:TContent ID="Main">
<div id="content-box">
    <div class="border">
        <div class="padding">
            <div id="toolbar-box">
                
                <div class="t">
                    <div class="t">
                        <div class="t"></div>
                    </div>
                </div>

                <div class="m" >
                    <div class="toolbar" id="toolbar">
                        <table class="toolbar">
                            <tr>

                                <td class="button" id="toolbar-edit">
                                  <com:TLinkButton CssClass="toolbar" ID="edit" OnClick="onEdit">
                                    <span class="icon-32-edit" title="<%[Edit]%>"></span><%[Edit]%>
                                  </com:TLinkButton>
                                </td>

                                <td class="button" id="toolbar-new">
                                    <a href="<%= $this->Service->constructUrl('openTime.add') %>" class="toolbar">
                                        <span class="icon-32-new" title="<%[New]%>"></span><%[New]%>
                                    </a>
                                </td>

                                <td class="button" id="toolbar-delete">
                                  <com:TLinkButton CssClass="toolbar" ID="delete" OnClick="onDelete">
                                    <span class="icon-32-delete" title="<%[Delete]%>"></span><%[Delete]%>
                                  </com:TLinkButton>
                                </td>
								
                                <td class="button" id="toolbar-print">
                                  <a href="<%= $this->Service->constructUrl($this->getApplication()->getService()->getRequestedPagePath()) %>&action=print" class="toolbar" target="_blank">
                                    <span class="icon-32-print" title="<%[Print]%>"></span><%[Print]%>
                                  </a>
                                </td>								
								

                                <td class="button" id="toolbar-help">
                                    <a href="./proxy/index.php?page=<%= $this->getApplication()->getService()->getRequestedPagePath() %>&lang=<%= $this->getApplication()->getGlobalState('lang') %>" title="<%[Help]%>" onClick="Modalbox.show(this.href, {title: this.title, width: 600, height: 600}); return false;" class="toolbar" >
                                        <span class="icon-32-help" title="<%[Help]%>"></span><%[Help]%>
                                    </a>
                                </td>
                            </tr>
                        </table>
                    </div><!-- end class toolbar -->
                    <div class="header icon-48-accesslevel"><%[Open Time List]%></div>
                    <div class="clr"></div>
                </div><!-- end class m -->

                <div class="b">
                    <div class="b">
                        <div class="b"></div>
                    </div>
                </div>
            </div><!-- end class toolbar-box -->

            <div class="clr"></div>

            <com:TLiteral ID="okMsg" Text="" />
            <com:TLiteral ID="koMsg" Text="" />

            <div id="element-box">
    
                <div class="t">
                    <div class="t">
                        <div class="t"></div>
                    </div>
                </div>
                <div class="m">

                    <div id="list">
                    <com:TDataGrid
                    ID="DataGrid"
                    DataKeyField="id"
                    AutoGenerateColumns="false"
                    CssClass="adminlist"
                    ItemStyle.CssClass = "row0"
				    AlternatingItemStyle.CssClass="row1"
                    AllowPaging="true"
                    PageSize="15"
                    PagerStyle.Mode="Numeric"
                    PagerStyle.HorizontalAlign="Center"
                    OnPageIndexChanged="changePage"
                    OnPagerCreated="pagerCreated"
                    OnEditCommand="onEdit"
                    >

                    <com:TBoundColumn
                        HeaderText="ID"
                        DataField="id"
                        HeaderStyle.Width = "20px"
                    />

                    <com:TTemplateColumn
                        HeaderText=""
                        HeaderStyle.Width = "20px"
                    >
                        <prop:HeaderTemplate>
                            <com:TActiveCheckBox
                                ID="headerCB" 
                                AutoPostBack="true"
                                OnCallback="Page.checkboxAllCallback"
                                InputAttributes.value="0"
                            />
                        </prop:HeaderTemplate>
                       <prop:ItemTemplate>
                          <com:TConditional Condition="!$this->Page->isRecordBlock('hr_openTime', $this->NamingContainer->DataItem['id'])">
                                <prop:TrueTemplate>
                                  <com:TActiveCheckBox 
                                      ID="item"
                                      InputAttributes.value="<%#$this->NamingContainer->DataItem['id']%>"
                                  />
                                </prop:TrueTemplate>
                                <prop:FalseTemplate>
                                        <span onmouseover="Tip('<%[This record is modified by <b>]%><%= $this->Page->getUserName($this->NamingContainer->DataItem['locked']) %></b> ', BALLOON, true, BALLOONIMGPATH, './js/tip_balloon', OFFSETX, -10, TEXTALIGN, 'justify', FADEIN, 600, FADEOUT, 600, PADDING, 8)">
                                                <com:TImage ID="noAccess" ImageUrl="./themes/letux/images/menu/icon-16-access.png" />
                                        </span>
                                </prop:FalseTemplate>
                        </com:TConditional>
                        </prop:ItemTemplate>

                    </com:TTemplateColumn>

	                <com:TTemplateColumn
	                   HeaderText=""
	                >
                    <prop:HeaderTemplate>
                        <com:TLabel
                        	Text="<%[Name]%>"
                        />
                    </prop:HeaderTemplate>


                        <prop:ItemTemplate>
							<com:TConditional Condition="!$this->Page->isRecordBlock('hr_openTime', $this->NamingContainer->DataItem['id'])">
								<prop:TrueTemplate>
		                            <com:THyperLink 
		                                NavigateUrl="<%= $this->Service->constructUrl('openTime.mod',array('id'=>$this->NamingContainer->DataItem['id'])) %>"
		                                Text="<%#$this->NamingContainer->DataItem['name']%>"
		                            />
		    		            </prop:TrueTemplate>
								<prop:FalseTemplate>
									<com:TLabel
			                        	Text="<%#$this->NamingContainer->DataItem['name']%>"
            			            />
		            		    </prop:FalseTemplate>
							</com:TConditional>
                        </prop:ItemTemplate>
	                </com:TTemplateColumn>
                    <com:TBoundColumn 
                        HeaderText="<%[Description]%>"
                        DataField="comment"
                    />
					
					
                  
                   </com:TDataGrid>
                    </div>
                    <div class="clr"></div>
                </div> <!-- end class m -->
                <div class="b">
                    <div class="b">
                        <div class="b"></div>
                    </div>
                </div>
            </div> <!-- end class element-box -->
            <div class="clr"></div>
        </div> <!-- end class toolbar-box -->
        <div class="clr"></div>
    </div><!-- end class content-box -->
</div> <!-- end class content-box -->
</com:TContent>
