<com:TContent ID="Main">
    <div id="content-box">
        <div class="padding">
            <div id="element-box" class="login">

                <div class="t">
                    <div class="t">
                        <div class="t"></div>
                    </div>
                </div>

                <div class="m">

                    <h1><%[Horux Administration Login]%></h1>
                    <div id="section-box">
                        <div class="t">
                            <div class="t">
                                <div class="t"></div>
                            </div>
                        </div>
                        <div class="m">
                            <com::TPanel DefaultButton="submitLogin">
                                <div id="loginForm">
                                    <p id="form-login-username">
                                        <com:TLabel ForControl="username" Text="<%[Username]%>" />
                                        <com:TTextBox
                                            ID="username"
                                            Attributes.size="15"
                                            CssClass="inputbox" />
                                    </p>

                                    <p id="form-login-password">
                                        <com:TLabel ForControl="password" Text="<%[Password]%>" />
                                        <com:TTextBox
                                            ID="password"
                                            TextMode="Password"
                                            Attributes.size="15"
                                            CssClass="inputbox" />
                                    </p>
                                    <p id="form-login-lang" style="clear: both;">
                                        <label for="lang"><%[Language]%></label>
                                        <com:TDropDownList ID="lang">

                                        </com:TDropDownList>
                                    </p>
                                    <div style="padding-left: 180px;">
                                        <div class="button1-left">
                                            <div class="next">
                                                <com:TLinkButton ID="submitLogin" CssClass="toolbar" OnClick="onLogin" ValidationGroup="Group1">
                                                    <%[Login]%>
                                                </com:TLinkButton>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="clr"></div>
                            </com::TPanel>
                            <div class="clr"></div>
                        </div>
                        <div class="b">
                            <div class="b">
                                <div class="b"></div>
                            </div>
                        </div>
                    </div>

                    <p>
                        <%[Use a valid username and password to gain access Horux.]%>
                    </p>

                    <div id="lock"></div>
                    <div class="clr"></div>
                </div>
                <div class="b">
                    <div class="b">
                        <div class="b"></div>
                    </div>
                </div>
            </div>

            <noscript>
            <%[Warning! JavaScript must be enabled for proper operation of the Administrator Back-end]%></noscript>
            <div class="clr"></div>
        </div>
    </div>



</com:TContent>