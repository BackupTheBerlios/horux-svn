<com:TContent ID="Main">
<div id="content-box">
    <div class="border">
        <div class="padding">
            <div id="toolbar-box">
                
                <div class="t">
                    <div class="t">
                        <div class="t"></div>
                    </div>
                </div>
                <div class="m" >
                    <div class="toolbar" id="toolbar">
                        <table class="toolbar">
                            <tr>
                          
                                <td class="button" id="toolbar-new">
                                    <a href="<%= $this->Service->constructUrl('components.translate.add') %>" class="toolbar">
                                        <span class="icon-32-new" title="New"></span><com:TTranslate Catalogue="messages">New</com:TTranslate>
                                    </a>
                                </td>

                                <td class="button" id="toolbar-help">
                                    <a href="./proxy/index.php?page=<%= $this->getApplication()->getService()->getRequestedPagePath() %>&lang=<%= $this->getApplication()->getGlobalState('lang') %>" title="<com:TTranslate Catalogue="messages">Help]</com:TTranslate>" onClick="Modalbox.show(this.href, {title: this.title, width: 600, height: 600}); return false;" class="toolbar" >
                                        <span class="icon-32-help" title="Help"></span><com:TTranslate Catalogue="messages">Help</com:TTranslate>
                                    </a>
                                </td>


                            </tr>
                        </table>
                    </div><!-- end class toolbar -->

                    <div class="header" style="background-image: url(<%~ ./assets/icon-48-translate.png %>)"><%[Translate]%></div>
                    <div class="clr"></div>
                </div><!-- end class m -->

                <div class="b">
                    <div class="b">
                        <div class="b"></div>
                    </div>
                </div>
            </div><!-- end class toolbar-box -->

            <div class="clr"></div>

            <com:TLiteral ID="okMsg" Text="" />
            <com:TLiteral ID="koMsg" Text="" />

            <div id="element-box">
    
                <div class="t">
                    <div class="t">
                        <div class="t"></div>
                    </div>
                </div>
                <div class="m">
                    <%[Language]%>
                    <com:TDropDownList
                        ID="language"
                        CssClass="inputbox"
						AutoPostBack="true"
						 OnSelectedIndexChanged="selectionChangedLanguage"
					 />
					&nbsp;&nbsp;
                    <%[Module]%>
                    <com:TDropDownList
                        ID="module"
						AutoPostBack="true"
                        OnSelectedIndexChanged="selectionChangedModule"
                        CssClass="inputbox">

						<com:TListItem Value="0" Text="<%[-- Select a module --]%>" />
						<com:TListItem Value="." Text="Horux" />
						<com:TListItem Value="themes" Text="<%[Themes]%>" />
						<com:TListItem Value="components" Text="<%[Components]%>" />
						<com:TListItem Value="hardware.device" Text="<%[Hardware]%>" />
                    </com:TDropDownList>
					&nbsp;&nbsp;
                    <%[Extension]%>
                    <com:TDropDownList
                        ID="extension"
						AutoPostBack="true"
                        OnSelectedIndexChanged="selectionChangedExtension"
                        CssClass="inputbox" />

                    <div id="list">

						<com:TDataGrid
							ID="DataGrid"
							DataKeyField="id"
							AutoGenerateColumns="false"
							CssClass="adminlist"
							AllowPaging="true"
							PageSize="50"
							
							ItemStyle.CssClass = "row0"
							AlternatingItemStyle.CssClass="row1"
								
							PagerStyle.Mode="Numeric"
							PagerStyle.HorizontalAlign="Center"
							OnPageIndexChanged="changePage"
							OnPagerCreated="pagerCreated"
							OnEditCommand="editItem"
							OnItemCreated="itemCreated"
							OnCancelCommand="cancelItem"
   						 	OnUpdateCommand="saveItem"
    						OnDeleteCommand="deleteItem"
						>
						
						<com:TBoundColumn
							ID="sourceColumn"
							HeaderText="<%[Source]%>"
							DataField="source"
							ReadOnly="True"
						/>
						
						<com:TBoundColumn
							ID="textColumn"
							HeaderText="<%[Translation]%>"
							DataField="text"
						/>

						<com:TEditCommandColumn
						HeaderText="<%[Edit]%>"
						HeaderStyle.Width="100px"
						UpdateText="<%[Save]%>"
						CancelText="<%[Cancel]%>"
						EditText="<%[Edit]%>"
						ItemStyle.HorizontalAlign="Center"
						ItemStyle.Font.Italic="false"
						/>
						
						<com:TButtonColumn
						ID="DeleteColumn"
						HeaderText="<%[Delete]%>"
						HeaderStyle.Width="50px"
						ItemStyle.HorizontalAlign="Center"
						ItemStyle.Font.Italic="false"
						Text="<%[Delete]%>"
						CommandName="delete"
						/>
						</com:TDataGrid>

                    </div>

				<div class="clr"></div>
				</div> <!-- end class m -->
                <div class="b">
                    <div class="b"> 
                        <div class="b"></div>
                    </div>
                </div>
            </div><!-- end class toolbar-box -->

			
            <div class="clr"></div>

            
        </div> <!-- end class toolbar-box -->
        <div class="clr"></div>
    </div><!-- end class content-box -->
</div> <!-- end class content-box -->
</com:TContent> 
