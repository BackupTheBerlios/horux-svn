<?xml version="1.0" encoding="utf-8"?>
<install type="component">
	<installName>media</installName>
	<name>Media</name>
	<version>1.0.0</version>
	<creationDate>13/11/08</creationDate>
	<author>Jean-Luc Gyger / Letux</author>
	<authorEmail>info@letux.ch</authorEmail>
	<authorUrl>http://www.letux.ch</authorUrl>
	<copyright>Letux</copyright>
	<license>GNU/GPL</license>
	<description>Extension to display message on screen displaying movies and pictures</description>
	
	<sqlinstall>install.sql</sqlinstall>
	<sqluninstall>uninstall.sql</sqluninstall>	
	
	<mainmenu>
		<menu iconmenu="icon-16-message.png" url="components.media.infoDisplay" name="Info Display" >
                        <submenus>
                                <submenu iconmenu="icon-16-playlist.png" url="components.media.mediaList" name="Play list" ></submenu>
                                <submenu iconmenu="icon-16-infomessage.png" url="components.media.messageInfoList" name="Info message" ></submenu>
                        </submenus>
               </menu>
	</mainmenu>
	
	<permissions>
		<permission>components.media.addUserMessage</permission>
                <permission>components.media.infoDisplay</permission>
                <permission>components.media.mediaList</permission>
                <permission>components.media.addMedia</permission>
                <permission>components.media.modMedia</permission>
                <permission>components.media.messageInfoList</permission>
                <permission>components.media.addMessageInfo</permission>
                <permission>components.media.modMessageInfo</permission>
	</permissions>
	
</install>